extends layout.pug

block title
  title Utilisateurs

block content
  span(class="border" style="width: 120px;")
    h1 Liste des utilisateurs

    ul.list-group
      each user, index in users
        li.list-group-item.d-flex.justify-content-between.align-items-center
          span #{user.name} - #{user.birth}
          form(action="/delete" method="POST" class="delete-form d-inline")
            input(type="hidden" name="index" value=index)
            button(type="submit" class="btn btn-danger btn-sm") Supp